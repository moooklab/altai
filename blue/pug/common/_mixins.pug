mixin therapy(image, title, text)
    a(href="###").therapy
        img(src=image, alt="")
        div.text
            h3= title
            if text
                span= text

mixin bonus(image, title, text)
    div.bonus
        img(src=image, alt="")
        div.text
            h3= title
            span= text
        if block
            block

mixin review(name, date, text)
    div.review
        div.stars
            img(src="images/star.svg", alt="")
            img(src="images/star.svg", alt="")
            img(src="images/star.svg", alt="")
            img(src="images/star.svg", alt="")
            img(src="images/star.svg", alt="")
        div.text= text
        div.author= name
        div.date !{date} на #[a(href="###") Яндекс]

mixin advantage(icon, text)
    div.advantage
        div.icon: img(src=icon, alt="")
        span= text
