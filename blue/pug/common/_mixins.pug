mixin program(image, title, text)
    a(href="###").program
        img(src=image, alt="")
        div.text
            h3= title
            span= text

mixin program_full(image, date, title, price, level)
    a(href="###").program_full
        div.image
            img(src=image, alt="")
            span.date= date
        div.description
            h3= title
            div.wrap
                div.overflow
                    ul
                        li 
                            img(src="images/blanc.svg", alt="")
                            span 2-3 процедуры в день
                        li 
                            img(src="images/cards.svg", alt="")
                            span Не требует санаторно-курортной карты
                    div.price
                        span.price= price
                        div.toolbar_note
                            img(src="images/question.svg", alt="")
                            div.toolbar_text
                                span Пора уделить время себе, ведь медиана - идеальный момент, чтобы укрепить здоровье, сохранить красоту и настроиться на душевное равновесие.
        div.additional
            button.blue: span Подробнее
            if level
                div.level
                    span Уровень:
                    if level == 'low'
                        div.low
                            div
                            div
                            div
                    if level == 'middle'
                        div.middle
                            div
                            div
                            div
                    if level == 'high'
                        div.high
                            div
                            div
                            div

